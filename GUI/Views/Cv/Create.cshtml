@model EasyMission.Domaine.cv
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- body-content -->
<div class="body-content clearfix">

    <div class="bg-color2 block-section line-bottom">
        <div class="container">
            <h1 class="text-center no-margin">Add CV</h1>
        </div>
    </div>

    <div class="bg-color1 block-section line-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <!-- form post a job -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()                       
     <div class="form-group">
                            <label>Title</label>
         @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })


                        </div>

                        <div class="form-group">
                            <label>Specialite</label>
                            @Html.EditorFor(model => model.specialite, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                      

                        <div class="form-group">
                            <label>Description </label>
                           @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                        </div>






                        <div class="form-group ">
                            <button class="btn btn-t-primary btn-theme">Add</button>
                        </div>


}                </div>
            </div>
        </div>
    </div>
</div><!--end body-content -->