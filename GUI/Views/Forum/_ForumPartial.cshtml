@model EasyMission.Domaine.commentaire
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="form-group">
                @Html.TextAreaFor(x => x.message, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="form-group">
        <a href="#" class="btn btn-t-primary btn-theme">Post comment</a>
    </div>
}