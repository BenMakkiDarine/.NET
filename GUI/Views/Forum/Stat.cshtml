
@{
    ViewBag.Title = "Stat";
}

<h2>Stat</h2>

<script>
       // var temp1 = '@ViewBag.Data';
        var data =JSON.parse('@ViewBag.Data');
        //console.log(data);

</script>

<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">




            google.charts.load('current', {'packages':['corechart']});
            google.charts.setOnLoadCallback(drawChart);
            // Callback that creates and populates a data table,
            // instantiates the pie chart, passes in the data and
            // draws it.
            function drawChart() {

                // Create the data table.

                var chartdata = new google.visualization.arrayToDataTable(data);

                var options = {
                    title: ' Nombre de commentaire par forum',
                    is3D: true,
                    backgroundColor: "#ffffff",

                };



                // Instantiate and draw our chart, passing in some options.
               // var chart = new google.visualization.PieChart(document.getElementById('piechart'));
               // chart.draw(chartdata, options);


                var barchart = new google.visualization.ScatterChart(document.getElementById('barchart_div'));
                barchart.draw(chartdata, options);


            }
    </script>
</head>

<body>
    <!--Div that will hold the pie chart-->

    <td><div id="barchart_div" style="border: 1px solid #ccc; width:1500px;height:500px;    "></div></td>
</body>
